@import "mocha.css";
* {
  font-family: Iosevka Mayukai Original;
  font-size: 16px;
  font-weight: bold;
}

window#waybar {
  /* border-bottom: 2px solid @surface0; */
  transition-property: background;
  transition-duration: 0.5s;
  background-color: rgba(30, 30, 46, 0.85);
}

